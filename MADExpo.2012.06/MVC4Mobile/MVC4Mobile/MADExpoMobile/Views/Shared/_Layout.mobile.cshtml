<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>MADExpo - @ViewBag.Title</title>
    @Styles.Render("~/Content/css/mobile")
    @Styles.Render("~/Content/css/jquerymobile")
</head>
<body>
    <div data-role="page">
        <div data-role="header">
            <h1 data-bind="text: title"></h1>
        </div>
        <div data-role="navbar">
            <ul>
                <li><a href="#">Register</a></li>
                <li><a href="#">Sponsors</a></li>
                <li><a href="@Url.Action("Index")" rel="external">Speakers</a></li>
            </ul>
        </div>
        <div data-role="content">
            @RenderBody()
        </div>
        <div data-role="footer">
            <span class="hiText">MAD</span>Expo
        </div>
        @Html.Partial("_ViewSwitcher")
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerymobile")
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/dotdotdot")
    @RenderSection("scripts", required: false)
</body>
</html>