<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>RockNUG - @ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.mobile-1.0.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/jquery.mobile.structure-1.0.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.6.4.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.mobile-1.0.min.js")" type="text/javascript"></script>

</head>

<body>
       <div data-role="page">
        <div data-role="header">
            <h1>@ViewBag.Title</h1>
        </div>
        <div data-role="navbar">
            <ul>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("Directions", "Directions", "Home")</li>
                <li>@Html.ActionLink("Community", "Community", "Home")</li>
                <li>@Html.ActionLink("FAQ", "FAQ", "Home")</li>
            </ul>
        </div>
        <div data-role="content">
        @RenderBody()
        </div> 
        <div data-role="footer">
            @Html.Partial("_ViewSwitcher")
        </div> 
    </div>
</body>
</html>
